<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.infrastructure.persistence.mapper.CrowdTagDetailMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="org.example.infrastructure.persistence.po.CrowdTagDetailPO">
        <id column="id" property="id"/>
        <result column="tag_id" property="tagId"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 检查用户是否在标签内 -->
    <select id="checkUserInTag" resultType="int">
        SELECT COUNT(1)
        FROM crowd_tag_detail
        WHERE tag_id = #{tagId}
          AND user_id = #{userId}
    </select>

    <!-- 批量插入标签明细 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO crowd_tag_detail (tag_id, user_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.tagId}, #{item.userId})
        </foreach>
        ON DUPLICATE KEY UPDATE
        update_time = NOW()
    </insert>

    <!-- 根据标签ID查询用户列表 -->
    <select id="selectUserIdsByTagId" resultType="java.lang.String">
        SELECT user_id
        FROM crowd_tag_detail
        WHERE tag_id = #{tagId}
        ORDER BY create_time ASC
    </select>

    <!-- 根据标签ID统计用户数量 -->
    <select id="countUsersByTagId" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM crowd_tag_detail
        WHERE tag_id = #{tagId}
    </select>

    <!-- 根据标签ID删除所有明细 -->
    <delete id="deleteByTagId">
        DELETE FROM crowd_tag_detail
        WHERE tag_id = #{tagId}
    </delete>

    <!-- 批量检查用户是否在标签内 -->
    <select id="batchCheckUsersInTag" resultType="java.lang.String">
        SELECT user_id
        FROM crowd_tag_detail
        WHERE tag_id = #{tagId}
        AND user_id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </select>

</mapper>