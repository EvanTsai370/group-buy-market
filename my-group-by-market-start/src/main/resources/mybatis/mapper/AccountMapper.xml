<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.infrastructure.persistence.mapper.AccountMapper">

    <select id="selectByUserAndActivity" resultType="org.example.infrastructure.persistence.po.AccountPO">
        SELECT *
        FROM account
        WHERE user_id = #{userId}
          AND activity_id = #{activityId}
    </select>

</mapper>